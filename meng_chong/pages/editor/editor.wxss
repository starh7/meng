/* pages/editor/editor.wxss */
/* 标签页 */
.tab .btns{
    display: flex;
    /* justify-content: space-around; */
    /* align-items: center; */
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 30px;
}
.tab .btns view{
    padding: 30px;
    flex: 1;
}
.tab .btns .active{
    background-color: #d3e771;
}
.tab .cons{
    margin: 0 30px;
}
.tab .cons .none{
    display: none;
}
.tab .cons .cur{
    display: block;
}
.tab .cons .record .big{
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    /* grid-template-columns: 20px repeat(6, 1fr) 20px; */
    /* grid-column-gap: 10px; */
   grid-row-gap: 20px;
   margin-bottom: 30px;
}
.tab .cons .record .big .item{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.tab .cons .record .big .item .iconfont{
    padding: 15px;
    font-size: 30px;
    background-color: #cceba7;
    border-radius: 50%;
    font-weight: bold;
    margin-bottom: 10px;
}
/* 小的 */
.tab .cons .record .small{
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    /* grid-template-columns: 20px repeat(6, 1fr) 20px; */
    /* grid-column-gap: 10px; */
   grid-row-gap: 20px; 
}
.tab .cons .record .small .item{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.tab .cons .record .small .item .iconfont{
    padding: 12px;
    font-size: 22px;
    font-weight: bold;
    background-color: #ebe7a7;
    border-radius: 50%;
    margin-bottom: 10px;
}
.tab .cons .record .small .item text:nth-child(2){
    font-size: 13px;
}

/*  */





ul li{
    list-style: none;
}
.nav{
    display: flex;
    justify-content: space-around;
    font-size: 20px;
    font-weight: bold;
    margin-bottom: 30px;
}
.nav li{
    width: 50%;
    text-align: center;
    line-height: 80px;
}
.nav li:nth-child(1){
    background-color: rgb(143, 143, 86);
}
.content li{
    display: none;
}
.content .current{
    display: flex;
    flex-wrap: wrap;
    margin: 0 25px;
}
.content li:nth-child(1) .item{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 25%;
    font-size: 15px;
    margin-bottom: 20px;
}
.content li:nth-child(1) .item .iconfont{
    font-size: 20px;
    padding: 10px;
    background-color: #bbcc7f;
    border-radius: 50%;
    margin-bottom: 5px;
}