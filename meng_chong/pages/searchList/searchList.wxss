/* pages/searchList/searchList.wxss */
/* .搜索内容展示区域 */
.container{
    /* margin: 0 30rpx; */
}
/* 搜索框 */
.search_ipt{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
}
.search_ipt .ipt{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 88%;
    background-color: #f9f9f4;
    padding: 10px 15px;
    border-radius: 20px; 
    color: #333;
}
.search_ipt .ipt .left{
    display: flex;
}
.search_ipt .ipt .iconfont{
    font-size: 20px;
    margin-right: 15px;
    color: #999;
}
.search_ipt .ipt .clear{
    /* display: inline;
    padding: 0;
    margin: 0; */
    color: #888;
    font-weight: bold;
    font-size: 30rpx;
}
.search_ipt .search_btn{
    width: 10%;
}
.search_result{
    overflow: hidden;
    margin-top: 20px;
    background-color: #f9f9f4;
    /* background-color: #91912c; */
    height: 500px;
}
.search_result .title{
    display: block;
    font-size: 20px;
    font-weight: bold;
    margin: 20px;
    /* background-color: #fff; */

}
.search_result .item{
    display: flex;
    margin: 30rpx;
    justify-content: space-between;
    margin-top: 15px;
    height: 100px;
    background-color: #fff;
    border-radius: 20px;

}
.search_result .item .cont{
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    margin-left: 15px;
    margin-top: 15px;
}
.search_result .item .bigImg{
    margin: 15px;
    width: 75px;
    height: 75px;
    border-radius: 10px;
}
.search_result .item .pub image{
    margin-right: 10px;
    width: 25px;
    height: 25px;
    border-radius: 50%;
}
.search_result .item .pub {
    display: flex;
    align-items: center;
    margin-left: 15px;
    margin-top: 20px;
    color: #888;
    font-size: 26rpx;
}